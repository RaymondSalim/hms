# HMS Cron Management System Environment Variables (Cronicle)

# HMS Application Configuration
HMS_BASE_URL=http://localhost:3000
HMS_CRON_SECRET=<secret>

# Cronicle Configuration
CRONICLE_foreground=1
CRONICLE_echo=1
TZ=Asia/Jakarta

# Cronicle Notifications
CRONICLE_NOTIFICATION_EMAIL=admin@micasasuites.com

# SMTP Configuration (for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@micasasuites.com
SMTP_TO=admin@micasasuites.com